<div class="news-widget">
	<h2>Recent Posts</h2>

	{{#each newsArticle in this}}
		<div class="news-item">
			<h2>
				{{newsArticle.title}} -
				<span class="date">{{human-date newsArticle.publishDate}}</span>
			</h2>

			<p>{{newsArticle.abstract}}</p>

			<a href="#">read more</a>
		</div>
	{{/each}}	
</div>		
		
