<div class="news-index">
	{{#each newsArticle in this}}
		<div class="news-item">
			<h3>
				{{newsArticle.title}} -
				<span class="date">{{human-date newsArticle.publishDate}}</span>
			</h3>

			<p>{{newsArticle.abstract}}</p>

			{{#link-to 'news.show' newsArticle}}read more{{/link-to}}
		</div>
	{{/each}}
</div>
